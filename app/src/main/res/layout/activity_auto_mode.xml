<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".activity.AutoModeActivity">

    <RelativeLayout
        android:id="@+id/rlAutoModeTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRFID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="RFID" />

        <TextView

            android:id="@+id/tvActionContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tvRFID"
            android:layout_toRightOf="@+id/tvRFID"
            android:text="动作内容" />

        <TextView
            android:id="@+id/tvFaultId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="故障ID" />


    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="110dp"
        android:layout_below="@id/rlAutoModeTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        >

    <Button
        android:id="@+id/btnStartTracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始循迹"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_background"
        />

    <EditText
        android:inputType="number"
        android:hint="速度"
        android:id="@+id/etStartSpeed"
        android:maxLines="1"
        android:maxLength="2"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="70dp"
        android:layout_height="42dp"
        android:background="@drawable/edit_text_bg"
        />

    <Button
        android:id="@+id/btnStopTracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止循迹"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_background"
       />

    </LinearLayout>

    <!--<Button-->
        <!--android:id="@+id/btnExitAutoMode"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:text="退出自动模式" />-->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        >

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="4dp"

                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/tv_auto_bg"
                android:text="左轮速度"
                android:maxLines="2"
                android:maxEms="4"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="4dp"

                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/tv_auto_bg"
                android:text="右轮速度"
                android:maxLines="2"
                android:maxEms="4"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="4dp"

                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/tv_auto_bg"
                android:maxEms="2"
                android:text="距离" />

        </TableRow>

        <TableRow>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:paddingBottom="4dp"
                android:background="#19d435"
                android:text="(cm/min)"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="#19d435"
                android:text="(cm/min)"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="#19d435"
                android:text="(cm)"
                />

        </TableRow>

        <TableRow>
        <TextView
            android:id="@+id/tvLeftWheelSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/tv_auto_bg2"
            android:text="速度" />

        <TextView
            android:id="@+id/tvRightWheelSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/tv_auto_bg2"
            android:text="速度"

            />

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/tv_auto_bg2"
            android:text="距离" />

    </TableRow>



        <TableRow>

            <!--<android.support.v7.widget.AppCompatButton />-->


            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/btnLeftWheelSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:text="获取左轮速度"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_auto_bg"
                />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/btnRightWheelSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="获取右轮速度"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_auto_bg"
                />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/btnDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/btn_auto_bg"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="获取距离"

                />

        </TableRow>

    </TableLayout>

</RelativeLayout>
