<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AutoModeActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRFID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="RFID" />

        <TextView

            android:id="@+id/tvActionContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tvRFID"
            android:layout_toRightOf="@+id/tvRFID"
            android:text="动作内容" />

        <TextView
            android:id="@+id/tvFaultId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="故障ID" />

        <TextView
            android:id="@+id/tvSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="速度" />


    </RelativeLayout>

    <Button
        android:id="@+id/btnStartTracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="开始循迹"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/centerView"
        android:layout_toStartOf="@+id/centerView" />

    <Button
        android:id="@+id/centerView"
        android:layout_centerInParent="true"
        android:layout_width="10dp"
        android:background="#00000000"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnStopTracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止循迹"
        android:layout_alignTop="@+id/btnStartTracking"
        android:layout_toRightOf="@+id/centerView"
        android:layout_toEndOf="@+id/centerView" />


    <Button
        android:id="@+id/btnExitAutoMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="退出自动模式" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@id/btnExitAutoMode"

        >

        <TableRow>

            <TextView
                android:id="@+id/tvLeftWheelSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#19d435"
                android:text="左轮速度" />

            <TextView
                android:id="@+id/tvRightWheelSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:background="#19d435"
                android:text="右轮速度"

                />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:background="#19d435"
                android:text="距离" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnLeftWheelSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#19d435"
                android:text="获取左轮速度"
                android:gravity="center"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/btnRightWheelSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#19d435"
                android:gravity="center"
                android:text="获取右轮速度"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/btnDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#19d435"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="距离"

                />

        </TableRow>

    </TableLayout>

</RelativeLayout>
