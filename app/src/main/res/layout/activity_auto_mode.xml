<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".activity.AutoModeActivity">

    <RelativeLayout
        android:id="@+id/rlAutoModeTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRFID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="RFID" />

        <TextView

            android:id="@+id/tvActionContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tvRFID"
            android:layout_toRightOf="@+id/tvRFID"
            android:text="动作内容" />

        <TextView
            android:id="@+id/tvFaultId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="故障ID" />


    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="110dp"
        android:layout_below="@id/rlAutoModeTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

    <Button
        android:id="@+id/btnStartTracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始循迹"

        />

    <EditText
        android:id="@+id/etStartSpeed"
        android:layout_width="35dp"
        android:background="@drawable/edit_text_bg"
        android:layout_height="40dp"/>

    <Button
        android:id="@+id/btnStopTracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止循迹"

       />

    </LinearLayout>

    <Button
        android:id="@+id/btnExitAutoMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:text="退出自动模式" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnExitAutoMode"
        android:layout_marginBottom="100dp"
        >

        <TableRow>

            <TextView
                android:id="@+id/tvLeftWheelSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#19d435"
                android:text="左轮速度" />

            <TextView
                android:id="@+id/tvRightWheelSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:background="#19d435"
                android:text="右轮速度"

                />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:background="#19d435"
                android:text="距离" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnLeftWheelSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#19d435"
                android:text="获取左轮速度"
                android:gravity="center"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/btnRightWheelSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#19d435"
                android:gravity="center"
                android:text="获取右轮速度"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/btnDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#19d435"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="距离"

                />

        </TableRow>

    </TableLayout>

</RelativeLayout>
